{% extends 'StaticBundle::layout.html.twig' %}

{% block title %}Blog{% endblock %}

{% block content %}

<div class="blog">
    <div>
        {#{ render(controller('StaticBundle:Default:box', { 'limit': 12 })) }#}
    </div>
    
    {% for post in posts %}
    <div class="blog-posts">
      <h1>{{ post.name}}</h1>
      <p>{{ post.text|length > 50 ? post.text|slice(0, 50) ~ '...' : post.text }}</p>
      <p><b>Datum objave: </b>{{ post.created|date('d.m.Y H:i:s')}}</p>    
      <p class="blog-image"><a href="{{ asset('post/')}}{{post.path }}" rel="lightbox">
            <img src="{{ asset('post/')}}{{post.path }}" alt="slika"/>
        </a>
      </p>
      <p><a href="{{ path('_post', ({'id': post.id})) }}" >Podrobno &raquo;</a></p>
    </div>
    {% endfor %}
</div>
  
{% endblock %}